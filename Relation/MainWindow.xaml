<Window x:Class="Realtion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rl="clr-namespace:Realtion"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl >
            <TabItem IsEnabled="{Binding IsReportEnabled}" Header="Person">
                <rl:PersonView>
                </rl:PersonView>
            </TabItem>
            <TabItem IsEnabled="{Binding IsReportEnabled}" Header="Relation">
                <rl:RelationView></rl:RelationView>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
